{
  "$schema": "https://turborepo.com/schema.json",
  "extends": ["//"],
  "ui": "tui",
  "tasks": {
    "migrate:prod:up": {
      "dependsOn": ["api#build"],
      "cache": false
    },
    "migrate:up": {
      "dependsOn": ["start:db"],
      "cache": false
    },
    "migrate:down": {
      "dependsOn": ["start:db"],
      "cache": false
    },
    "start:db": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["migrate:up"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    }
  }
}
